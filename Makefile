default:

###########################################################################
## Make Initial Dev
###########################################################################
init-dev:
	@yarn add -D husky@4.3.8 git-cz@4.7.6 lint-staged@10.5.4
	@yarn install

###########################################################################
## Run On Dev Server
###########################################################################
run-dev:
	@yarn storybook

